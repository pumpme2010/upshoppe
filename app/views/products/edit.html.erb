<% if current_user %>
	<div class="container-fluid">
      <div class="row-fluid">
		<%= render :partial => "shared/sidebar" %>
		<% if current_user.id == @product.user_id %>
		<div class ="span9">
			<%= form_for(@product, :html => { :class => "form-signin", :style => "margin-top:0px"} ) do |f| %>
				<% if @product.errors.any? %>
					<div class="alert">
						<h4>Form is invalid</h4>
						<ul>
							<% for message in @product.errors.full_messages %>
								<li><%= message %></li>
							<% end %>
						</ul>
					</div>
				<% end %>

			<h2 class="form-signin-heading">Edit product</h2>
			
			<%= f.file_field :image , :class =>"input-block-level", :placeholder =>"Picture" %>

			<%= f.text_field :name , :class =>"input-block-level", :placeholder =>"Product Name" %>

			<%= f.select :quality , options_for_select([["Select option",""],["Brand new", "Brand new"], ["Secondhand", "Secondhand"]], :selected =>@product.quality), :class =>"input-block-level"%>

			<%= f.text_field :price , :class =>"input-block-level", :placeholder =>"Price (php)" %>
			<%= f.text_field :tag , :class =>"input-block-level", :placeholder =>"Tag" %>

			<%= f.text_area :description , :class =>"input-block-level", :placeholder =>"Product description", :rows => "5" %>

			<%= f.submit "Save",  :class =>"btn btn-large btn-primary"%>
			<%end%>
		</div>
		<%end%>
	  </div>
    </div>
<%end%>	

	
