	<%= ajax_will_paginate @products %>
<table class ="table">
			<tr>
				<th></th>
				<th>Product</th>
				<th>Price</th>
				<th>Actions</th>
			</tr>

			<% @products.each do |product| %>
			<tr>
			    <td>
			        <%= image_tag product.image_url.to_s, :size => "50x50" %>&nbsp;<%= link_to product.name, product %>
			    </td>
			    <td><%= product.quality %></td>
			    <td><%= number_to_currency(product.price, :unit => "Php") %></td>
			    <td>
			        <%= link_to 'Edit', edit_product_path(product) %> | 
			        <%= link_to 'Remove', product, method: :delete, data: { confirm: 'Are you sure?' } %>
			    </td>
			 </tr>			  
			 <% end %>


			</table>
			<%= ajax_will_paginate @products %>