    <!-- NAVBAR
    ================================================== -->
    <div class="navbar-wrapper">
      <!-- Wrap the .navbar in .container to center it within the absolutely positioned parent. -->
      <div class="container">

        <div class="navbar navbar-inverse">
          <div class="navbar-inner">
            <!-- Responsive Navbar Part 1: Button for triggering responsive navbar (not covered in tutorial). Include responsive CSS to utilize. -->
            <% if current_user %>
              <%= link_to "UPshoppe", pages_newsfeed_path, :class => "brand" %>
              <%= form_tag pages_search_path, :method => 'get' , :class => "pull-left", :style => "margin-top:10px;margin-bottom:00px" do %>
                <%= text_field_tag :search, params[:search], :class =>"input-inline-level", :placeholder =>"Search here..."  %>
                <%= submit_tag "Search", :name => nil, :class =>"btn btn-small btn-success", :style => "margin-top:-10px" %>
              <% end %>    
            <% else %>
              <%= link_to "UPshoppe", new_session_path, :class => "brand" %>   
              <%= form_tag pages_search_path, :method => 'get', :id => "pradaks_search", :class => "pull-left", :style => "margin-top:10px;margin-bottom:00px" do %>
                <%= text_field_tag :search, params[:search], :class =>"input-inline-level", :placeholder =>"Search here..."  %>
                <%= submit_tag "Search", :name => nil, :class =>"btn btn-small btn-success", :style => "margin-top:-10px" %>
              <% end %>       
            <% end %>
            <!-- Responsive Navbar Part 2: Place all navbar contents you want collapsed withing .navbar-collapse.collapse. -->
            <div class="nav-collapse collapse pull-right">
              <ul class="nav">
                <% if current_user %>
                  <li><%= link_to current_user.email, current_user%></li>
                  <li><%= link_to "Logout", log_out_path %></li>
                <% else %>
                  <li><%= link_to "What's hot?", pages_newsfeed_path %></li>
                  <li><%= link_to "Products",products_public_products_path %></li>
                  <li><%= link_to "Shops", users_public_users_path %></li>
                  <li><%= link_to "Log in", new_session_path %></li>
                  <li><%= link_to "Sign up", new_user_path %></li>                
                <% end %>
              </ul>
            </div><!--/.nav-collapse -->
          </div><!-- /.navbar-inner -->
        </div><!-- /.navbar -->

      </div> <!-- /.container -->
    </div><!-- /.navbar-wrapper -->
