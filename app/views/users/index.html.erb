<% if current_user %>
    <div class="container-fluid">
      <div class="row-fluid">

		<%= render :partial => "shared/sidebar" %>

		<div class ="span9">
		<h3>Index of Users</h3>
		<table class ="table table-striped table-bordered table-condensed">
		<tr>
			<th>Email</th>
			<th>Contact number</th>
			<th>Description</th>
			<th>Address</th>
		</tr>
		<% @users.each do |t| %>
			<tr>
				<td><%= image_tag t.image_url.to_s%>&nbsp;<%=link_to t.email, t%></td>
				<td><%=t.contact_number%></td>
				<td><%=t.description%></td>
				<td><%=t.address%></td>
			</tr>
		<% end %>
		</table>
		</div>
	   </div>
   </div>

<% end %>
